<header>
    <h2 class="page_title">Codeial</h2>
    <ul class="login-container">
        <%if (locals.user) {%>
            <li>
                <a href="/users/profile/<%= user.id%>">
                    <%= user.name %>
                </a>
            </li>
            <li><a href="/users/sign-out">Sign Out</a></li>
        <% } else { %>
            <li class="options"><a href="/users/sign-in">Sign In</a></li>

            <li class="options"><a href="/users/sign-up">Sign Up</a></li>
        <% } %>
    </ul>
</header>
